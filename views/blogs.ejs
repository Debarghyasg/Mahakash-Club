    <style>



        :root {
            --void-black: #0a0a0f;
            --deep-space: #1a1a2e;
            --nebula-purple: #6b4c9a;
            --nebula-pink: #e94b8c;
            --nebula-blue: #4c9fd9;
            --star-white: #e8e8f0;
            --cosmic-gold: #f4a460;
            --plasma-cyan: #00d9ff;
        }

        * {
            margin: 0;
            box-sizing: border-box;
        }

        body {
            /* font-family: 'Rajdhani', sans-serif; */
            background: var(--void-black);
            color: var(--star-white);
            overflow-x: hidden;
            position: relative;
            padding-top: 60px;
        }


        @keyframes twinkle {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 1; }
        }

        .nebula-glow {
            position: fixed;
            width: 600px;
            height: 600px;
            border-radius: 50%;
            filter: blur(120px);
            opacity: 0.15;
            pointer-events: none;
            z-index: 0;
        }

        .nebula-1 {
            top: -200px;
            right: -200px;
            background: radial-gradient(circle, var(--nebula-purple), transparent);
            animation: float 20s ease-in-out infinite;
        }

        .nebula-2 {
            bottom: -200px;
            left: -200px;
            background: radial-gradient(circle, var(--nebula-blue), transparent);
            animation: float 25s ease-in-out infinite reverse;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            50% { transform: translate(50px, -50px) scale(1.1); }
        }

        /* Header */
        header {
            position: relative;
            z-index: 10;
            padding: 3rem 2rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            background: linear-gradient(180deg, rgba(26, 26, 46, 0.8) 0%, transparent 100%);
            backdrop-filter: blur(10px);
        }

        h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(2.5rem, 8vw, 4rem);
            font-weight: 400;
            color: var(--star-white);
            letter-spacing: 0.15em;
            margin-bottom: 0.5rem;
        }

        .tagline {
            font-size: 1rem;
            color: rgba(232, 232, 240, 0.6);
            letter-spacing: 0.2em;
            text-transform: uppercase;
            font-weight: 300;
        }

        /* Main container */
        main {
            position: relative;
            z-index: 5;
            max-width: 1400px;
            margin: 0 auto;
            padding: 4rem 2rem;
        }

        /* Blog grid */
        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 2.5rem;
            margin-top: 3rem;
        }

        /* Blog card */
        .blog-card {
            background: rgba(26, 26, 46, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            backdrop-filter: blur(10px);
            cursor: pointer;
        }

        .blog-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.7s;
        }

        .blog-card:hover::before {
            left: 100%;
        }

        .blog-card:hover {
            transform: translateY(-10px);
            border-color: var(--plasma-cyan);
            box-shadow: 0 20px 60px rgba(0, 217, 255, 0.3);
        }

        .card-image {
            width: 100%;
            height: 160px;
            position: relative;
            overflow: hidden;
        }

        .card-image::after {
            content: '';
            position: absolute;
            inset: 0;
            /* background: radial-gradient(circle at 30% 50%, rgba(233, 75, 140, 0.3), transparent 60%); */
        }

        .card-content {
            padding: 1.5rem;
        }

        .card-category {
            display: inline-block;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--plasma-cyan);
            border: 1px solid var(--plasma-cyan);
            padding: 0.4rem 1rem;
            border-radius: 20px;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .card-title {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            line-height: 1.3;
            color: var(--star-white);
        }

        .card-excerpt {
            font-size: 0.95rem;
            line-height: 1.5;
            color: rgba(232, 232, 240, 0.7);
            margin-bottom: 1rem;
        }

        .card-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 0.85rem;
            color: rgba(232, 232, 240, 0.5);
        }

        .read-more {
            color: var(--cosmic-gold);
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: gap 0.3s;
        }

        .read-more:hover {
            gap: 1rem;
        }

        .read-more::after {
            content: '→';
            font-size: 1.2rem;
        }

        /* Featured post */
        .featured-post {
            display: flex;
            flex-direction: column;
            background: rgba(26, 26, 46, 0.8);
            border: 1px solid rgb(164, 164, 255);
            border-radius: 20px;
            overflow: hidden;
            position: relative;
        }

        .featured-post::before {
            content: 'FEATURED';
            position: absolute;
            top: 1rem;
            left: 1rem;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.65rem;
            letter-spacing: 0.3em;
            color: var(--nebula-pink);
            border: 2px solid var(--nebula-pink);
            padding: 0.4rem 1rem;
            border-radius: 30px;
            z-index: 2;
            background: rgba(26, 26, 46, 0.9);
        }

        .featured-image {
            height: 160px;
            position: relative;
        }

        .featured-image::after {
            content: '';
            position: absolute;
            inset: 0;
            /* background: radial-gradient(circle at 70% 30%, rgba(233, 75, 140, 0.4), transparent 70%); */
        }

        .featured-content {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .featured-title {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.5rem;
            font-weight: 900;
            margin-bottom: 0.75rem;
            line-height: 1.2;
            background: linear-gradient(135deg, var(--cosmic-gold), var(--star-white));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .featured-excerpt {
            font-size: 0.95rem;
            line-height: 1.5;
            color: rgba(232, 232, 240, 0.8);
            margin-bottom: 1rem;
        }

        .cta-button {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.75rem;
            background: rgb(141, 165, 186);
            border: none;
            border-radius: 50px;
            color: white;
            font-family: 'Orbitron', sans-serif;
            color: rgb(0, 0, 0);
            font-size: 0.85rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            cursor: pointer;
            transition: all 0.4s;
            text-decoration: none;
            align-self: flex-start;
        }

        .cta-button:hover {
            transform: translateX(10px);
            box-shadow: 0 10px 40px rgba(233, 75, 140, 0.5);
        }

        /* Responsive */
        @media (max-width: 968px) {
            .blog-grid {
                grid-template-columns: 1fr;
            }

            .featured-content {
                padding: 1.5rem;
            }

            .featured-title {
                font-size: 1.35rem;
            }
        }

        /* Loading animation */
        .blog-card {
            animation: fadeInUp 0.6s ease-out backwards;
        }

        .blog-card:nth-child(1) { animation-delay: 0.1s; }
        .blog-card:nth-child(2) { animation-delay: 0.2s; }
        .blog-card:nth-child(3) { animation-delay: 0.3s; }
        .blog-card:nth-child(4) { animation-delay: 0.4s; }
        .blog-card:nth-child(5) { animation-delay: 0.5s; }
        .blog-card:nth-child(6) { animation-delay: 0.6s; }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
